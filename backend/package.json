{
  "name": "event-registration-backend",
  "version": "1.0.0",
  "description": "Backend for Event Registration System",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "prisma generate && prisma db push && npm run db:seed",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "node src/utils/seedData.js",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "db:deploy": "prisma db push && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.8.3",
    "uuid": "^9.0.1",
    "prisma": "^5.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
